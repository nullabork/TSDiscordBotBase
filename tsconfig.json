{
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "./build",
      "baseUrl": "./",
      "sourceMap": false,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {
        "src/*": ["src/*"]
      }
  },
  "files": [
    "./src/index.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}